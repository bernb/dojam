<div class="container">
  <h1><%= museum_object.full_inv_number %></h1>
  <div class="row mb-4">
    <div class="col text-right">
      <%#= wicked_pdf_image_tag 'doa_logo.png',class: "doa-logo-small" %>
    </div>
  </div>

  <div class="row">
    <div class="col align-self-center">
      <% wicked_pdf_image_tag 'not_available_image', class: 'rounded mx-auto d-block' %>
      <% if museum_object.images&.main.present? %>
        <img src="file://<%= ActiveStorage::Blob.service.send(:path_for, museum_object.images.main.variant(resize_to_limit: [400, 400]).processed.key) %>">
      <% end %>
      <%# wicked_pdf_image_tag Rails.application.routes.url_helpers.rails_representation_url(museum_object.images.main.variant(resize: '300x300').processed, only_path: true) %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h4><%= t('visual description') %></h4>
      <table class="table table-bordered table-condensed">
        <tbody>
        <tr>
          <td>
            <h6>
              <strong><%= t('type') %></strong>
            </h6>
            <span><%= museum_object.basic_object_properties %></span>
          </td>
        </tr>
        <tr>
          <td>
            <h6>
              <strong><%= t('measurements') %></strong>
            </h6>
            <span><%= museum_object.measurements %></span>
          </td>
        </tr>
        <tr>
          <td>
            <h6>
              <strong><%= t('color') %></strong>
            </h6>
            <span><%= museum_object.color_list %></span>
          </td>
        </tr>
        <td>
          <h6>
            <strong><%= t('description') %></strong>
          </h6>
          <span><%= museum_object.remarks %></span>
        </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h4><%= t('general informations') %></h4>
      <table class="table table-bordered table-condensed">
        <tbody>
        <tr>
          <td>
            <h6>
              <strong><%= t('museum') %></strong>
            </h6>
            <span><%= t('Jordan Archaeological Museum') %></span>
          </td>
        </tr>
        <tr>
          <td>
            <h6>
              <strong><%= t('museum inventory number') %></strong>
            </h6>
            <span><%= museum_object.full_inv_number %></span>
          </td>
        </tr>
        <tr>
        <tr>
          <td>
            <h6>
              <strong><%= t('authenticity') %></strong>
            </h6>
            <span><%= museum_object.authenticity&.name %></span>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>

  <% if false %>
    <h4><%= t('additional images') %></h4>
    <table class="table table-bordered table-condensed">
      <tbody>
      <tr>
        <td>
          <%= wicked_pdf_image_tag 'not_available_image', class: 'img-thumbnail' %>
          <%= wicked_pdf_image_tag 'not_available_image', class: 'img-thumbnail' %>
          <%= wicked_pdf_image_tag 'not_available_image', class: 'img-thumbnail' %>
          <%= wicked_pdf_image_tag 'not_available_image', class: 'img-thumbnail' %>
          <%= wicked_pdf_image_tag 'not_available_image', class: 'img-thumbnail' %>
          <%= wicked_pdf_image_tag 'not_available_image', class: 'img-thumbnail' %>
          <%= wicked_pdf_image_tag 'not_available_image', class: 'img-thumbnail' %>
        </td>
      </tr>
      </tbody>
    </table>
  <% end %>
</div>
