<div class="museum_object_page museum_object_material">
  <h2>material</h2>
  <%= link_to "edit", wizard_path(:step_material) %>
  <dl class="dl-horizontal">
		<div class="row">
			<div class="col-3">
				<dt>material</dt>
			</div>
			<div class="col">
				<% @museum_object.materials_with_specifieds.each do |m_ms| %>
					<dd><%= m_ms %></dd>
				<% end %>
			</div>
		</div>
    
    <div class="row">
      <div class="col-3">
        <dt>kind of object</dt>
      </div>
      <div class="col">
        <dd><%= @museum_object&.kind_of_object&.name || "undetermined" %> (<%= @museum_object&.kind_of_object_specified&.name || "undetermined" %>)
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <dt>colors</dt>
      </div> 
      <div class="col"> 
        <% @museum_object&.colors&.uniq.each do |m| %>
          <div class="">
            <dd><%= m&.name %></dd>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <dt>Munsell color</dt>
      </div>  
      <div class="col">
        <dd> <%= @museum_object&.munsell_color_decorated %> </dd>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <dt>production technique</dt>
      </div>  
      <div class="col">
        <dd> <%= @museum_object&.production_technique&.name %> </dd>
      </div>
    </div>
    
  </dl>
</div>
