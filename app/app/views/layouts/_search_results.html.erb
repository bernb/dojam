<div class="search-results">
  <%= paginate results unless results.blank? %>
  <div class="row mb-4">
    <div class="col">
      <%= results&.total_count&.to_s || t('0') %> <%= t('results') %>
    </div>
    <% if results.present? %>
      <div class="col-auto">
        <%= link_to t('export all as pdf'), museum_objects_path(format: :pdf, search_result_ids: results.ids), target: :_blank %>
      </div>
    <% end %>
  </div>
  <%= render 'layouts/search_results_as_cards' unless results.blank? %>
</div>
