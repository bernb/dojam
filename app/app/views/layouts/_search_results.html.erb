<div class="search-results">
  <%= paginate(results, remote: true) unless results.blank? %>
  <div class="row mb-4">
    <div class="col">
      <%= results&.total_count&.to_s || t('0') %> <%= t('results') %>
    </div>
  </div>
  <%= render 'layouts/search_results_as_cards' unless results.blank? %>
</div>
