<div class="museum_object_page museum_object_provenance">
  <h2><%= t('provenance') %></h2>
  <%= link_to t('edit'), wizard_path(:step_provenance) %>
  <dl class="dl-horizontal">
    <div class="row">
      <div class="col-3">
        <dt><%= t('site_name') %></dt>
      </div>
      <div class="col">
        <dd><%= t @museum_object&.excavation_site&.name %></dd>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <dt><%= t('other_site_name') %></dt>
      </div>
      <div class="col">
        <dd><%= t @museum_object&.name_expedition %></dd>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <dt><%= t('site_number_mega') %></dt>
      </div>
      <div class="col">
        <dd><%= t @museum_object&.site_number_mega %></dd>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <dt><%= t('site_number_expedition') %></dt>
      </div>
      <div class="col">
        <dd><%= t @museum_object&.site_number_expedition %></dd>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <dt><%= t('coordinates_mega') %></dt>
      </div>
      <div class="col">
        <dd><%= t @museum_object&.coordinates_mega %></dd>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <dt><%= t('kind_of_site') %></dt>
      </div>
			<div class="col">
				<dd>
				<%= t @museum_object&.excavation_site_category&.name %>;
				<%= t @museum_object&.excavation_site_kind&.name %>
				</dd>
			</div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <dt><%= t('finding_context') %></dt>
      </div>
      <div class="col">
        <dd><%= t @museum_object&.finding_context %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-3">
        <dt><%= t('remarks') %></dt>
      </div>
      <div class="col">
        <dd><%= t @museum_object&.finding_remarks %>
      </div>
    </div>
  </dl>

</div>
