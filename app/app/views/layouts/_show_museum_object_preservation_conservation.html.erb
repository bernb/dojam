<div class="museum_object_page museum_object_preservation_conservation">
  <h2><%= t('preservation') + '/' + t('conservation') %></h2>
  <%= link_to t('edit'), wizard_path(:step_preservation) %>
  <dl class="dl-horizontal">
  
    <div class="row">
      <div class="col-3">
        <dt><%= t('preservation (material)') %></dt>
      </div>
      <div class="col">
        <dd><%= @museum_object&.preservation_material&.name %></dd>
      </div>
    </div>
      
    <div class="row">
      <div class="col-3">
        <dt><%= t('preservation (object)') %></dt>
      </div>
      <div class="col">
        <dd><%= @museum_object&.preservation_object&.name %></dd>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <dt><%= t('conservation') %></dt>
      </div>
      <div class="col">
        <dd><%= @museum_object&.description_conservation %></dd>
      </div>
    </div> 

    <div class="row">
      <div class="col-3">
        <dt><%= t('conservation needed') %></dt>
      </div>
      <div class="col">
        <dd><%= @museum_object&.needs_conservation_yesno? %></dd>
      </div>
    </div> 

    <div class="row">
      <div class="col-3">
        <dt><%= t('cleaning needed') %></dt>
      </div>
      <div class="col">
        <dd><%= @museum_object&.needs_cleaning_yesno? %></dd>
      </div>
    </div> 
  </dl>
</div>
