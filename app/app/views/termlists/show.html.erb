<%= render 'layouts/title', title_name: @term.class.to_s.underscore.humanize.downcase %>
<dl>
  <dt><%= t('name') %></dt>
  <dd><%= @term.name %></dd>
  <dt><%= t('museum objects ') %></dt>
  <% @term.museum_objects.each do |object| %>
    <%= render 'layouts/museum_object_card', museum_card: object.decorate, variant: nil %>
  <% end %>
</dl>


