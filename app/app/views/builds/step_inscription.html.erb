<%= render "layouts/build_steps_layout", step_name: @step do %>
	<%= simple_form_for @museum_object, data:{parsley_validate:""}, url: wizard_path do |f| %>
    <% f.input :inscription_decoration, label: "decoration/inscription" %>
    <%= f.association :inscription_letters, collection: @inscription_letters, label: "letters of inscription", as: :check_boxes, include_blank: false, wrapper_html: {class: 'dojam-multi-select'} %>
    <%= f.association :inscription_languages, collection: @inscription_language, label: "language of inscription", as: :check_boxes, include_blank: false, wrapper_html: {class: 'dojam-multi-select'} %>
    <%= f.input :inscription_text, label: "text of inscription" %>
    <%= f.input :inscription_translation, label: "translation of inscription" %>
    <%= f.button :submit, "next step" %>
  <% end %>
<% end %>
