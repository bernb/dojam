<%= render "layouts/build_steps_layout", step_name: @step, object: @museum_object, wizard_path: wizard_path do %>
  <%= simple_form_for @museum_object, url: wizard_path, method: 'put' do |f| %>
    <%= f.association :acquisition_kind, label: t('kind_of_acquisition'), include_blank: false %>
    <%= f.association :acquisition_delivered_by, label: t('delivered_by'), include_blank: false %>
    <%= f.input :acquisition_deliverer_name, label: t('name_of_deliverer') %>
		<%= f.label false, t('date_of_acquisition') %>
		<div class="row">
			<div class="col">
				<%= f.input :acquisition_date_unknown, as: :boolean, label: t('unknown') %>
			</div>
		</div>
		<div class="row no-gutters">
			<div class="col">
				<%= f.input :acquisition_year, include_blank: true, label: false, collection: 1900..Date.today.year %>
			</div>
			<div class="col-md-auto">
				_
			</div>
			<div class="col">
				<%= f.input :acquisition_month, include_blank: true, label: false, collection: 1..12 %>
			</div>
			<div class="col-md-auto">
				_
			</div>
			<div class="col">
				<%= f.input :acquisition_day, include_blank: true, label: false, collection: 1..31 %>
			</div>
		</div>
    <%= f.input :acquisition_document_number, label: t('no_of_acquisition_document') %>
		<%= f.input :remarks_acquisition, label: t('remarks') %>
    <%= f.button :submit, t('confirm') %>
  <% end %>
<% end %>
