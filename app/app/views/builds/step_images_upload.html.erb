<%= render "layouts/build_steps_layout", step_name: @step do %>
  <%= simple_form_for @museum_object, url: wizard_path do |f| %>
    <%= f.simple_fields_for :images do |i| %>
      <%= f.label "", t('primary image') %>
      <%= i.file_field :main, multiple: false, class: "spacer" %>
      <%= f.label "", t('add more images') %>
      <%= i.file_field :list, multiple: true, class: "spacer" %>
    <% end %>
    <%= f.button :submit, t('confirm') %>
  <% end %>
<% end %>

