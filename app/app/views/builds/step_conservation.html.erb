<%= render "layouts/build_steps_layout", step_name: @step do %>
  <%= simple_form_for @museum_object, url: wizard_path do |f| %>
    <%= f.input :description_conservation, label: t('conservation'), as: :text %>
    <%= f.input :needs_conservation, label: t('conservation needed') %>
    <%= f.input :needs_cleaning, label: t('cleaning needed') %>
    <%= f.button :submit, t('confirm') %>
  <% end %>
<% end %>

