<%= render "layouts/build_steps_layout", step_name: @step do %>
	<%= simple_form_for @museum_object, data:{parsley_validate:""}, url: wizard_path do |f| %>
    <%= f.association :decoration_styles, collection: @decoration_styles, label: t('style'), as: :check_boxes, include_blank: false, wrapper_html: {class: 'dojam-multi-select'}%>
    <%= f.association :decoration_techniques, collection: @decoration_techniques, label: t('technique'), as: :check_boxes, include_blank: false, wrapper_html: {class: 'dojam-multi-select'} %>
    <%= f.association :decoration_colors, collection: @decoration_colors, label: t('color'), as: :check_boxes, include_blank: false, wrapper_html: {class: 'dojam-multi-select'}%>
    <%= f.input :munsell_color, label: t('munsell_color') %>
    <%= f.button :submit, t('confirm') %>
  <% end %>
<% end %>

