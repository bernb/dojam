<%= render "layouts/build_steps_layout", step_name: @step do %>
  <%= simple_form_for @museum_object, url: wizard_path do |f| %>
    <%= f.input :max_length, as: :string, label: "max. length" %>
    <%= f.input :max_width, as: :string, label: "max. width" %>
    <%= f.input :height, as: :string, label: "height" %>
    <%= f.input :opening_dm, as: :string, label: "opening dm" %>
    <%= f.input :bottom_dm, as: :string, label: "bottom dm" %>
    <%= f.input :max_dm, as: :string, label: "max. dm" %>
    <%= f.input :weight_in_gram, as: :string, label: "weight in gram" %>
    <%= f.button :submit, "confirm" %>
  <% end %>
<% end %>
