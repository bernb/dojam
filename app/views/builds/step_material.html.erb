<%= render "layouts/build_steps_layout", step_name: @step do %>
  <%= simple_form_for @museum_object, url: wizard_path do |f| %>
    <% @materials.each do |material| %>
      <label class="checkbox">
        <%= check_box_tag 'material_ids[]', material.id %>
        <%= material.name %>
      </label>
    <% end %>
    <%= f.submit "next step", class: 'btn btn-primary' %></p>
  <% end %>
<% end %>

