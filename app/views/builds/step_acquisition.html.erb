<%= render 'layouts/title', title_name: "ACQUISITION" %>
<%= render 'layouts/new_entry_progress_bar', state: 'acquisition' %>

<div class="col-md-3">
<%= simple_form_for @museum_object, url: wizard_path, method: 'put' do |f| %>
  <%= f.association :AcquisitionKind, label: "kind of acquisition", include_blank: false %>
  <%= f.association :AcquisitionDeliveredBy, label: "delivered by", include_blank: false %>
  <%= f.input :deliverer_name, label: "name of deliverer" %>
  <%= f.input :acquisition_date, label: "date of acquisition", as: :date, start_year: Date.new(1900).year %>
  
  <%= f.button :submit, class: "btn btn-primary" %>
  
<% end %>
</div>
