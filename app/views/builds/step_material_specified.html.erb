<%= render 'layouts/title', title_name: "add new object" %>
<%= render 'layouts/new_entry_progress_bar', state: @step %>
<div class="row">
  <div class="col-md-2">
    <%= simple_form_for @museum_object, url: wizard_path do |f| %>
      <% @materials.each do |m| %>
        <%= f.association :termlist_material_specifieds, collection: m.termlist_material_specifieds.order(name: :asc), label: m.name,  include_blank: false  %>
      <% end %>
      <%= f.submit "next step", method: :get, class: "btn btn-primary" %></p>
      <%= link_to "back", previous_wizard_path, class: "btn" %> 
      <%= link_to "finish", wizard_path(:step_confirm), class: "btn" %>
    <% end %>
  </div>
</div>

