<div class="card">
  <%# museum_card&.top_image %>
  <div class="card-body">
    <h5 class="card-title"><%= museum_card&.name %></h5>
    <p class="card-text">
      <dl class="row">
        <dt class="col-sm-6">
          location
        </dt>
        <dd class="col-sm-6">
          <%= museum_card&.storage_location&.name %>
        </dd>
        
        <dt class="col-sm-6">
				primary material
        </dt>
        <dd class="col-sm-6">
          <%= museum_card.main_material_with_specified %>
        </dd>

				<% if museum_card.secondary_materials.present? %>
					<dt class="col-sm-6">
					additional materials
					</dt>
						<dd class="col-sm-6">
					<% museum_card.secondary_materials_with_specifieds.each do |entry| %>
						<%= entry %>
					<% end %>
						</dd>
				<% end %>
        
        <dt class="col-sm-6">
          kind of object
        </dt>
        <dd class="col-sm-6">
          <%= museum_card&.kind_of_object&.name %>
        </dd>
				
        <dt class="col-sm-6">
          kind of object specified
        </dt>
        <dd class="col-sm-6">
          <%= museum_card&.kind_of_object_specified&.name %>
        </dd>

      </dl>
    </p>
    <%= museum_card.links variant %>
  </div>
</div>
